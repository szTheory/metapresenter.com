%nav.navbar.navbar-expand-lg.fixed-top
  = link_to '/', class: 'navbar-brand' do
    = image_tag 'images/logo.png', class: 'logo main'
    = image_tag 'images/logo-inverted.png', class: 'logo inverted'
  %button.navbar-toggler{"aria-controls" => "navbarNav", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarNav", "data-toggle" => "collapse", :type => "button"}
    = image_tag 'images/burger.png', id: 'burger'
  #navbarNav.collapse.navbar-collapse
    %ul.nav.navbar-nav.ml-auto
      - dato.nav.nav_items.each.with_index do |nav_item, i|
        %li.nav-item
          = link_to nav_item.path, class: 'nav-link' do
            #{nav_item.label}
        - unless i == dato.nav.nav_items.size-1
          %li.nav-item
            %span.nav-link.slash= "//"

    %span.github= partial 'stargazers'
    = partial 'get_started'